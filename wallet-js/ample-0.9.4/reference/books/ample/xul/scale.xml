<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<element extends="xul:XULElement" name="scale">
	<abstract>
		<locale>
			A scale (sometimes referred to as a "slider") allows the user to select a value from a range.
		</locale>
		<locale xml:lang="ru">
			Предназначен плавного изменения значения пользователем.
			Может быть размещен в пользовательском интерфейсе вертикально или горизонтально.
			Значение изменяется пемещением ползунка.
			Расположение отметок диапазона значений должно задаваться автором веб-приложения.
		</locale>
	</abstract>
	<remarks />
	<examples />
	<members>
		<attributes>
			<attribute name="value" default="">
				<description>
					<locale>
						The string attribute allows you to associate a data value with an element.
					</locale>
					<locale xml:lang="ru">
						Содержит значение компонента.
					</locale>
				</description>
			</attribute>
			<attribute name="disabled">
				<description>
					<locale>
						Indicates whether the element is disabled or not.
					</locale>
				</description>
			</attribute>
			<attribute name="step" default="" readonly="false">
				<description>
					<locale>
						The amount by which the value attribute changes when the arrows are clicked. The default value is 1.
					</locale>
					<locale xml:lang="ru">
						Задает шаг изменения значений.
					</locale>
				</description>
			</attribute>
			<attribute name="min" default="" readonly="false">
				<description>
					<locale>
						The minimum value that the scale or number box may be set to. The default value is 0.
					</locale>
					<locale xml:lang="ru">
						Задает минимальное значение диапазона.
					</locale>
				</description>
			</attribute>
			<attribute name="max" default="" readonly="false">
				<description>
					<locale>
						The maximum value that the scale or number box may be set to. The default value is 100.
					</locale>
					<locale xml:lang="ru">
						Задает максимальное значение диапазона.
					</locale>
				</description>
			</attribute>
			<!-- attribute name="dynamic" default="false" readonly="false">
				<values>
					<value name="true">
						<description>
							<locale xml:lang="ru">
								Элемент отправляет ли событие change.
							</locale>
						</description>
					</value>
					<value name="false">
						<description>
							<locale xml:lang="ru">
								Элемент не отправляет ли событие change.
							</locale>
						</description>
					</value>
				</values>
				<description>
					<locale xml:lang="ru">
						Указывет, отправляется ли событие change элементом.
					</locale>
				</description>
			</attribute-->
		</attributes>
		<methods />
		<properties />
		<events>
			<event name="change" type="Event" cancelable="false" bubbles="true">
				<description>
					<locale xml:lang="ru">
						Загорается при изменении значения компонента.
					</locale>
				</description>
			</event>
		</events>
	</members>
</element>